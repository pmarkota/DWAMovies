@{
ViewData["Title"] = "Delete";
    Layout = ViewContext.HttpContext.Session.GetString("AuthToken") == null ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
@model DAL.BLModels.BLGenre

<h2>Delete Genre</h2>

<h3>Are you sure you want to delete this genre?</h3>
<p>@Model.Name</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
