@{
ViewData["Title"] = "Delete";
    Layout = ViewContext.HttpContext.Session.GetString("AuthToken") == null ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
@model DAL.BLModels.BLTag

<h2>Delete Tag</h2>

<div>
    <p>Are you sure you want to delete the following tag?</p>
    <p><strong>Name:</strong> @Model.Name</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
