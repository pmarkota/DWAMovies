@{
ViewData["Title"] = "Edit";
    Layout = ViewContext.HttpContext.Session.GetString("AuthToken") == null ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutLoggedIn.cshtml";
}
@model DAL.BLModels.BLTag

<h2>Edit Tag</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label for="Name">Tag Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control mb-3" />
    </div>

    <button type="submit" class="btn btn-primary mb-3">Save Changes</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

