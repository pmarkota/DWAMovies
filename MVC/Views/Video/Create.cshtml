@{
ViewData["Title"] = "Create";
    Layout = ViewContext.HttpContext.Session.GetString("AuthToken") == null ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

@model DAL.BLModels.BLVideo

<h2>Create Video</h2>

<form asp-controller="Video" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="GenreId">Genre ID</label>
        <input type="number" id="GenreId" name="GenreId" class="form-control" />
    </div>

    <div class="form-group">
        <label for="TotalSeconds">Total Seconds</label>
        <input type="number" id="TotalSeconds" name="TotalSeconds" class="form-control" />
    </div>

    <div class="form-group">
        <label for="StreamingUrl">Streaming URL</label>
        <input type="text" id="StreamingUrl" name="StreamingUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ImageId">Image ID</label>
        <input type="number" id="ImageId" name="ImageId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create Video</button>
</form>
