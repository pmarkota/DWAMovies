 @{
    Layout = ViewContext.HttpContext.Session.GetString("AuthToken") == null ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_LayoutLoggedIn.cshtml";
 }

@model DAL.BLModels.BLVideo

<h2>Delete Video</h2>

<p>Are you sure you want to delete this video?</p>

<table class="table">
    <tr>
        <th>Name:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Description:</th>
        <td>@Model.Description</td>
    </tr>
    
</table>

@using (Html.BeginForm("DeleteConfirmed", "Video", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-default">Cancel</a>
}
